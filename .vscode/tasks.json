{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Production Build",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Start Production Server",
			"type": "shell",
			"command": "npm start",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"dependsOn": "Production Build"
		},
		{
			"label": "Start Dev Docker Compose",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"-f",
				"docker/dev/docker-compose.yml",
				"up",
				"--build",
				"-d"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"group": "docker"
			}
		},
		{
			"label": "Stop Dev Docker Compose",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"-f",
				"docker/dev/docker-compose.yml",
				"down"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"group": "docker"
			}
		}
	]
}